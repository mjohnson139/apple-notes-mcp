{
  "manifest_version": "0.3",
  "name": "apple-notes",
  "version": "1.1.0",
  "display_name": "Apple Notes",
  "description": "Fast Apple Notes integration with HTML formatting support. Create, read, search, list, and manage notes and folders from Claude.",
  "author": {
    "name": "Matthew Johnson"
  },
  "compatibility": {
    "platforms": ["darwin"]
  },
  "server": {
    "type": "node",
    "entry_point": "mcp-server.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/mcp-server.js"]
    }
  }
}
